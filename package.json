    "url": "git+https://github.com/sya-ri/css-var-extract.git"
  },
  "license": "ISC",
  "author": "sya-ri",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "turbo test",
    "check": "run-p check:*",
    "check:package-json": "sort-package-json 'package.json' 'packages/*/package.json' --check",
    "check:biome": "biome check .",
    "check:knip": "knip",
    "fix": "run-p fix:*",
    "fix:package-json": "sort-package-json 'package.json' 'packages/*/package.json'",
    "fix:biome": "biome check --write .",
    "build": "turbo build",
    "build:clean": "rimraf **[!node_modules]/dist"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@types/node": "22.5.1",
    "knip": "5.27.5",
    "lefthook": "1.7.14",
    "npm-run-all2": "6.2.2",
    "rimraf": "6.0.1",
    "sort-package-json": "2.10.1",
    "turbo": "2.1.0",
    "typescript": "5.5.4"
  },
  "packageManager": "npm@10.8.2"
}
